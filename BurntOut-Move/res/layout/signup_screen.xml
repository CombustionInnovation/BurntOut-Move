<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#454545" >

    <ImageView
        android:id="@+id/ap_item_vtype"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:scaleType="fitXY"
        android:src="@color/bottom_blue" />
<ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_weight="0.16" >

                <ImageView
                    android:id="@+id/rap_backpic"
                    android:layout_width="match_parent"
                    android:layout_marginTop="20dp"
                    android:layout_height="90dp"
           

                    android:src="@drawable/profileplaceholder" />

                <ImageButton
                    android:id="@+id/edit_button"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_weight="0.22"
                    android:background="#00000000"
                    android:onClick="goAway"
                    android:scaleType="centerInside"
                    android:src="@drawable/x" />

            </FrameLayout>

                 <EditText
                     android:id="@+id/signupfname"
                     android:layout_width="300dp"
                     android:layout_height="35dp"
                     android:layout_gravity="center"
                     android:layout_marginTop="10dp"
                     android:background="@drawable/corner_edit"
                     android:ems="10"
                     android:hint="First Name"
                     android:inputType="textCapWords"
                     android:singleLine="true"
                     android:textColor="#ffffff" />
                 
                    <EditText
                        android:id="@+id/signuplname"
                        android:layout_width="300dp"
                        android:layout_height="35dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/corner_edit"
                        android:ems="10"
                        android:hint="Last Name"
                        android:inputType="textCapWords"
                        android:singleLine="true"
                        android:textColor="#ffffff" />
                    
                         <EditText
                             android:id="@+id/signupemail"
                             android:layout_width="300dp"
                             android:layout_height="35dp"
                             android:layout_gravity="center"
                             android:layout_marginTop="10dp"
                             android:background="@drawable/corner_edit"
                             android:ems="10"
                             android:hint="Email"
                             android:inputType="textEmailAddress"
                             android:singleLine="true"
                             android:textColor="#ffffff" >
          
                 </EditText>
                    
                       <EditText
                           android:id="@+id/signuppassword"
                           android:layout_width="300dp"
                           android:layout_height="35dp"
                           android:layout_gravity="center"
                           android:layout_marginTop="10dp"
                           android:background="@drawable/corner_edit"
                           android:ems="10"
                           android:hint="Password"
                           android:inputType="textPassword"
                           android:singleLine="true"
                           android:textColor="#ffffff" />
                       
                      <EditText
                          android:id="@+id/signupcpassword"
                          android:layout_width="300dp"
                          android:layout_height="35dp"
                          android:layout_gravity="center"
                          android:layout_marginTop="10dp"
                          android:background="@drawable/corner_edit"
                          android:ems="10"
                          android:hint="Confirm Password"
                          android:inputType="textPassword"
                          android:singleLine="true"
                          android:textColor="#ffffff" />

                 <Button
                     android:id="@+id/signupbutton"
                     android:layout_width="283dp"
                     android:layout_height="40dp"
                     android:layout_gravity="center"
                     android:layout_marginTop="15dp"
                     android:layout_weight="0.25"
                     android:background="@drawable/login_button"
                     android:onClick="tryToLogin"
                     android:text="CREATE ACCOUNT"
                     android:textColor="#ffffff" />
                 
        </LinearLayout>
    </ScrollView>
</RelativeLayout>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_gravity="center"
    android:layout_height="460dp"
    android:orientation="vertical"
    android:topLeftRadius="20dp" >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="15dp" >

        <ScrollView
            android:id="@+id/reported_lights_holder"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="70dp" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp" >

                <TextView
                    android:id="@+id/has_reported_lights"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="15dp"
                    android:gravity="top|left"
                    android:text="TextView"
                    android:textColor="#ffffff"
                    android:textSize="11dp" />
            </LinearLayout>
        </ScrollView>
    </FrameLayout>

    <TextView
        android:id="@+id/reported_ago"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="13dp"
        android:gravity="center"
        android:text="TextView"
        android:textColor="#ffffff"
        android:textStyle="italic" />

    <FrameLayout
        android:layout_width="300dp"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp" >

        <RelativeLayout
            android:id="@+id/personal_message"
            android:layout_width="230dp"
            android:layout_height="75dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/bluebox" >

            <TextView
                android:id="@+id/custom_message"
                android:layout_width="180dp"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:gravity="top|left"
                android:text="TextView"
                android:textColor="#ffffff" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/car_holder"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginLeft="200dp"
            android:background="@drawable/rounded_blue" >

            <FrameLayout
                android:id="@+id/animatorHolder"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:gravity="center"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/notification_plate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="67dp"
                    android:gravity="center"
                    android:text="TextView"
                    android:textSize="11sp" />

                <com.burntout.burntout.carAnimator
                    android:id="@+id/carAnimator"
                    android:layout_width="65dp"
                    android:layout_marginLeft="23dp"
                    android:layout_marginTop="13dp"
                    android:layout_height="65dp" >
                </com.burntout.burntout.carAnimator>

            </FrameLayout>

        </RelativeLayout>
    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/bluebox"
        android:clipChildren="false" >

        <RelativeLayout
            android:id="@+id/personpropicholder"
            android:layout_width="76dp"
            android:layout_height="76dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/rounded_blue" >

            <com.pkmmte.circularimageview.CircularImageView
                android:id="@+id/mypropic"
                android:layout_width="66dp"
                android:layout_height="66dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:scaleType="fitCenter"
                android:src="@drawable/avatarplaceholder_2x" />
        </RelativeLayout>

        <TextView
            android:id="@+id/other_person_name"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:text="TextView"
            android:textColor="#ffffff"
            android:textSize="20sp" />

        <LinearLayout
            android:id="@+id/otherlinearLayout25067867"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/linearLayout1"
            android:layout_marginTop="80dp" >

            <TextView
                android:id="@+id/otherreportedlabel"
                android:layout_width="111dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Reported"
                android:textColor="#ffffff"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/otherrankinglabel"
                android:layout_width="95dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Ranking"
                android:textColor="#ffffff"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/otherrecievedlabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Received"
                android:textColor="#ffffff"
                android:textSize="14dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/otherlinearLayout3508675"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="100dp" >

            <TextView
                android:id="@+id/otherreportedcount"
                android:layout_width="114dp"
                android:layout_height="30dp"
                android:gravity="center"
                android:text="0"
                android:textColor="#ffffff"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/otherrankingcount"
                android:layout_width="94dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="0"
                android:textColor="#ffffff"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/otherrecievedcount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="0"
                android:textColor="#ffffff"
                android:textSize="18dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="300dp"
            android:layout_gravity="center"
            android:layout_height="match_parent" >

            <ImageView
                android:id="@+id/someimageview"
                android:layout_width="15dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="150dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="40dp"
                android:src="@drawable/ribbon" />

            <TextView
                android:id="@+id/other_person_rank"
                android:layout_width="132dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="45dp"
                android:gravity="left"
                android:text="TextView"
                android:textColor="#ffffff"
                android:textStyle="italic" />

        </LinearLayout>

    </FrameLayout>

    <TextView
        android:id="@+id/was_helpful_label"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="Was This Report Helpful?"
        android:textColor="#ffffff" />

    <FrameLayout
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="5dp" >

        <Button
            android:id="@+id/washelpful"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="6dp"
            android:background="@drawable/blue_no_corner"
            android:text="YES"
            android:textColor="#ffffff"
            android:textSize="18dp" />

        <Button
            android:id="@+id/wasnothelpful"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_marginLeft="150dp"
            android:layout_marginTop="6dp"
            android:background="@drawable/bluewithborder"
            android:text="NO"
            android:textColor="#ffffff"
            android:textSize="18dp" />

        <Button
            android:id="@+id/dissmissbutton"
            android:layout_width="200dp"
            android:layout_height="42dp"
            android:layout_gravity="center"
            android:layout_marginTop="0dp"
   
            android:background="@drawable/blue_no_corner"
            android:text="DISMISS"
            android:textColor="#ffffff"
            android:textSize="18dp" />

    </FrameLayout>

</LinearLayout>